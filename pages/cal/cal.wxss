page{
    height: 100%;
}
.content{
    width:100%;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    background-repeat: repeat;
    padding-top: 50rpx;
    background-image: url("../assets/img/bg.png");
}
.screenStyle{
    width:710rpx;
    height:240rpx;
    background-color: #ffffff;
    border-radius: 6rpx;
    text-align: right;
    padding-right: 15rpx;
    margin-bottom: 60rpx;
    line-height: 100rpx;
    flex-wrap: wrap;
}
.btnGroup{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding-left: 15rpx;
  
}
.btnItem{
    width:160rpx;
    min-height:150rpx;
    margin:10rpx;
    text-shadow: 0 1px 1px rgba(0, 0, 0, .3);
    border-radius: 10rpx;
    text-align: center;
    line-height: 150rpx;
}
.orange{
    background-color: rgb(246, 140, 30);
    color: #ffffff;
}
.blue{
    background-color: rgb(0, 147, 205);
    color: #ffffff;

}